{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "integration"
  ]
}
